<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="uiMessageSource" class="com.expressui.core.view.util.MessageSource">
        <property name="basename" value="classpath:uiMessages/messages"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <bean id="domainMessageSource" class="com.expressui.core.view.util.MessageSource">
        <property name="basename" value="classpath:domainMessages/messages"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <bean id="domainMessageSourceNoFallback" class="com.expressui.core.view.util.MessageSource">
        <property name="basename" value="classpath:domainMessages/messages"/>
        <property name="useCodeAsDefaultMessage" value="false"/>
        <property name="fallbackToSystemLocale" value="false"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <bean id="validationMessageSource" class="com.expressui.core.view.util.MessageSource">
        <property name="basename" value="classpath:ValidationMessages"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

</beans>